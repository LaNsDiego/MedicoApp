<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container_horarioatencion_row"
        android:padding="8dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dia_horarioatencion_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="simple"
                android:text="Lunes"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#5D5B83"
                android:textSize="25dp"
                android:layout_weight="1"

                />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_horainicio_horarioatencion_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:breakStrategy="simple"
                        android:text="10:00"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:textColor="#ACA9C5"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_horafin_horarioatencion_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:breakStrategy="simple"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="12:00"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:textColor="#ACA9C5"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />


                </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_estado_horarioatencion_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="simple"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="Activo"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#5D5B83"
                android:textSize="18dp"

                />
        </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>