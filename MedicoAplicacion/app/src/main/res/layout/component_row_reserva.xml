<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container_reserva_row"
        android:padding="8dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#BDBDBD"
        app:cardBackgroundColor="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_profile_paciente_row"
                android:layout_gravity="center_vertical"
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullname_paciente_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:breakStrategy="simple"
                    android:textColor="#212121"
                    android:text="Yonathan William Mamani Calisaya"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    />


                <TextView android:id="@+id/specialty_doctor_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunes 20 de agosto del 2020"
                    android:textColor="#757575"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"

                    />
                <TextView android:id="@+id/price_doctor_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:00 - 10:30"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="#757575"
                    />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>