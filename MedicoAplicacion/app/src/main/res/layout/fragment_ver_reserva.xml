<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".vista.reserva.VerReservaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#03A9F4"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_gravity="center"
            android:layout_height="96dp"
            android:padding="10dp"
            android:src="@drawable/ic_business_black_24dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container_reserva_row"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:strokeWidth="1dp"
        app:strokeColor="#FFFFFF"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#212121"
                android:text="Yonathan William Mamani Calisaya"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#757575"
                android:text="yonathanwilliam@gmail.com"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#757575"
                android:text="928374443"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container_reserva"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:strokeWidth="1dp"
        app:strokeColor="#FFFFFF"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#212121"
                android:text="Yonathan William Mamani Calisaya"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#757575"
                android:text="yonathanwilliam@gmail.com"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#757575"
                android:text="928374443"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>






</LinearLayout>